extends base

block content
  main.main 
    .container.mx-auto.py-6
      include hero
      #tour-section.h3.mb-4.text-3xl.font-extrabold.text-gray-900.mx-4.mt-8 Featured Tours
      #fullWidthTabContent.border-t.border-gray-200.mx-4
      .flex.flex-wrap.justify-center.mx-1.my-6.space-x-4(class='lg:mx-4')
        each tour in tours
          .py-2.px-3(class='hover:shadow-lg')
            .tour__card.max-w-sm.bg-white.border.border-gray-200.rounded-lg.shadow-md
              a(href='#')
                img.tour__card__img.rounded-t-lg(src=`/img/tours/${tour.imageCover}` alt=`${tour.name}`)
              .p-5
                a(href='#')
                  h5.mb-2.text-2xl.font-bold.tracking-tight.text-gray-900=tour.name
                p.mb-3.font-normal.text-gray-700=tour.summary
                .flex.items-center.mb-5(class='mt-2.5')
                  each star in [1,2,3,4,5]
                    svg.w-5.h-5(class=`text-${tour.ratingsAverage >= star? 'yellow-300': 'gray-300'}` aria-hidden='true' fill='currentColor' viewBox='0 0 20 20' xmlns='http://www.w3.org/2000/svg')
                      path(d='M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z')
                  span.bg-blue-100.text-blue-800.text-xs.font-semibold.mr-2.rounded.ml-3(class='px-2.5 py-0.5')=`${tour.ratingsAverage}`

                .flex.items-baseline.text-gray-900
                  span.text-md.font-semibold $ 
                  span.text-2xl.font-extrabold.tracking-tight=`${tour.price}`
                  span.ml-1.text-md.font-normal.text-gray-500 / person
                .flex.justify-end  
                  a.card-link.inline-flex.items-center.justify-end.text-md.text-grey-300.font-bold.px-3.py-2.text-md.font-medium.text-center.mt-4(href=`/tours/${tour.slugifiedName}` class='hover:shadow') 
                    | Learn more
                    svg.w-4.h-4.ml-2(fill='none' stroke='currentColor' viewBox='0 0 24 24' xmlns='http://www.w3.org/2000/svg')
                      path(stroke-linecap='round' stroke-linejoin='round' stroke-width='1' d='M9 5l7 7-7 7')

              