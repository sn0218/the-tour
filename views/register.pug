extends base

block append body
  script(type='module' src='/js/alert.js') 
  script(src='/js/register.js')


block content
  main.main
    .container.mx-auto.py-6
      section.bg-gray-50
        #login-div.flex.flex-col.justify-center.items-center.px-6.py-6.mx-auto(class='md:h-5/6 lg:h-full')
          a.flex.items-center.mb-6.text-2xl.font-semibold.text-gray-900(href='#' class='dark:text-white')
            img.w-8.h-8.mr-2(src='/img/logo.png' alt='logo')
            |           The Tour
          .w-full.bg-white.rounded-lg.shadow(class='border-gray-700 md:mt-0 sm:max-w-md xl:p-0')
            .p-6.space-y-4(class='md:space-y-6 sm:p-8')
              h1.text-xl.font-bold.leading-tight.tracking-tight.text-gray-900(class='md:text-2xl dark:text-white')
                | Create your account
              form.register-form.space-y-4(class='md:space-y-6' action='#')
                div
                  label.block.mb-2.text-sm.font-medium.text-gray-900(for='username' class='dark:text-white') Username
                  input#username.bg-gray-50.border.border-gray-300.text-gray-900.rounded-lg.block.w-full(type='text' name='username' class='sm:text-sm focus:ring-primary-600 focus:border-primary-600 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' placeholder='Alan Walker' required='')
                div
                div
                  label.block.mb-2.text-sm.font-medium.text-gray-900(for='email' class='dark:text-white') Email Address
                  input#email.bg-gray-50.border.border-gray-300.text-gray-900.rounded-lg.block.w-full(type='email' name='email' class='sm:text-sm focus:ring-primary-600 focus:border-primary-600 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' placeholder='name@example.com' required='')
                div
                  label.block.mb-2.text-sm.font-medium.text-gray-900(for='password' class='dark:text-white') Password
                  input#password.bg-gray-50.border.border-gray-300.text-gray-900.rounded-lg.block.w-full(type='password' name='password' placeholder='••••••••' class='sm:text-sm focus:ring-primary-600 focus:border-primary-600 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' required='')
                div
                  label.block.mb-2.text-sm.font-medium.text-gray-900(for='password' class='dark:text-white') Confirm Password
                  input#confirm-password.bg-gray-50.border.border-gray-300.text-gray-900.rounded-lg.block.w-full(type='password' name='password' placeholder='••••••••' class='sm:text-sm focus:ring-primary-600 focus:border-primary-600 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' required='')
                .flex.items-start
                  .flex.items-center.h-5
                    input#terms.w-4.h-4.border.border-gray-300.rounded.bg-gray-50(aria-describedby='terms' type='checkbox' class='focus:ring-3 focus:ring-primary-300 dark:bg-gray-700 dark:border-gray-600 dark:focus:ring-primary-600 dark:ring-offset-gray-800' required='')
                  .ml-3.text-sm
                    label.font-light.text-gray-500(for='terms' class='dark:text-gray-300')
                      | I accept the 
                      a.font-medium.text-primary-600(class='hover:underline dark:text-primary-500' href='#') Terms and Conditions
                button.w-full.text-white.bg-blue-500.font-medium.rounded-lg.text-.px-5.mr-2.mb-2(type='submit' class='hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 py-2.5 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800') Sign Up

                p.text-sm.font-light.text-gray-500(class='dark:text-gray-400')
                  | Already have an account? 
                  a.font-medium.text-primary-600(href='/login' class='hover:underline dark:text-primary-500') Login here


